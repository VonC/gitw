    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Process GitW",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId":"gitw.exe",
            "debugAdapter": "dlv-dap",
        },
        {
            "name": "Launch gitw",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "env": { "verbose": "true" },
            "debugAdapter": "dlv-dap",
        },
        {
            "name": "Launch bubbletea",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "env": { 
                "ptest": "1",
                "PAGER_LOG":"debug.log"
            },
            "debugAdapter": "dlv-dap",
        }

    ]
}